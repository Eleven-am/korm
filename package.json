{
  "name": "@eleven-am/korm",
  "version": "0.0.8",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "jest --coverage --verbose --forceExit --detectOpenHandles --runInBand --bail",
    "build": "rimraf dist && tsc",
    "lint": "eslint --ext .ts src",
    "lint:fix": "eslint --fix --ext .ts src",
    "copy": "cp package.json dist && cp README.md dist",
    "prepublish": "npm run build && npm run copy",
    "pipeline": "npm version patch && npm run prepublish && cd dist && npm publish"
  },
  "author": "Roy OSSAI",
  "license": "GPL-3.0",
  "main": "./src/index.js",
  "types": "./src/index.d.ts",
  "devDependencies": {
    "@stylistic/eslint-plugin-ts": "^3.1.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.4",
    "@typescript-eslint/eslint-plugin": "^8.24.0",
    "@typescript-eslint/parser": "^8.24.0",
    "eslint": "^9.20.1",
    "eslint-config-prettier": "^10.0.1",
    "eslint-import-resolver-node": "^0.3.9",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.3",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.1",
    "source-map-support": "^0.5.21",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.test\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "dependencies": {
    "zod": "^3.24.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Eleven-am/korm.git"
  }
}
